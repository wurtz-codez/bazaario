# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.md text
*.css text
*.scss text
*.html text

# Declare binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Handle Windows scripts correctly
*.bat text eol=crlf
*.cmd text eol=crlf

# Handle Linux/macOS scripts correctly
*.sh text eol=lf
